@model ChatContent
@{
    ViewData["Title"] = "Chat";
}

<div class="flex_col_c">
    <div class="flex_row_c">
        <label style="margin-right: 10px;">Пользователь: </label>
        <select id="user">
            @foreach (var user in Model.Users)
            {
                <option>@user</option>
            }
        </select>
    </div>
    <div id="chat_box" class="flex_col">
        <div id="chat" style="overflow: auto;">
        </div>

        <div class="flex_row">
            <textarea id="message" style="width: 90%;"></textarea>
            <div class="flex_col_c" style="background-color: aliceblue; cursor: pointer;" onclick="Send()">Отправить</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    LoadMesseges()    
</script>